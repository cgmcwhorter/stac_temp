\newbool{quotetype}
\newcommand{\worksheet}[2]{%
\noindent\begin{minipage}[t]{0.6\textwidth}
	\noindent \textbf{Name:} \ansname \\
  	\textbf{\course}
\end{minipage}%
\begin{minipage}[t]{0.4\textwidth}
	\flushright \textbf{\semester} \par
 	\textbf{Lecture: #1}
\end{minipage} \\[0.5cm]

	\begin{center} \Large \bfseries #2 \end{center}
}
\newcommand{\prob}{\noindent\textbf{Problem: }}
\newcounter{problem}
\newcounter{totalpoints}
\newcommand{\problem}[1]{
	\stepcounter{problem}%
	\mbox{\noindent\textbf{Problem \theproblem.} (#1pt)\addtocounter{totalpoints}{#1}}%
}
\newcommand{\sol}{\noindent\textbf{Solution. }}
\newcommand{\pt}[1]{(#1pt)\addtocounter{totalpoints}{#1}}
\newcommand{\printpoints}{{\Large\bfseries\vfill\hfill Total Points: \thetotalpoints}}
\newcommand{\usol}[2]{\underline{\hspace{#1}{\itshape #2}\hspace{#1}}}


