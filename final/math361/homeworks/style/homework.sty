% Unnumbered Problem
\newcommand{\prob}{\noindent\mbox{\textbf{Problem. }}}

% Counted Problem
\newcounter{problem}
\newcommand{\problem}[1]{
	\stepcounter{problem}%
	\if \ifnum #1 = 0 \noindent\mbox{\textbf{Problem \theproblem.}} %
	\else \ifnum #1 = 1 \noindent\mbox{\textbf{Problem \theproblem.} (#1pt)} %
	\else \noindent\mbox{\textbf{Problem \theproblem.} (#1pts)} %
	\fi
    \fi
}

