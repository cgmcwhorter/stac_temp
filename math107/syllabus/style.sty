% Title
\newcommand{\mytitle}[1]{%
\begin{center}
\thispagestyle{empty}
\includegraphics[width=\textwidth]{stac_horzlogo.png} \par
\huge\color{stacred} \coursenumber: \coursetitle \par
\color{stacred} \semester\ \myyear\
\end{center} \par\vspace{\baselineskip}%
}

% Section
\newcommand{\mysection}[3]{%
\begin{minipage}{\textwidth}
\phantomsection
	{%
\large\bfseries\color{stacred}
#2\label{#3} \par\vspace{-0.62\baselineskip}
\noindent\rule{#1\textwidth}{1.5pt} \par
\vspace{-0.3cm}\noindent\rule{0.13\textwidth}{5.1pt}%
	}%
\end{minipage}\par\vspace{4\lineskip}%
}

% Header
\newcommand{\lefthead}[1]{\noindent{\large\bfseries\color{stacred}#1}\par}

% Large Header
\newcommand{\largeheader}[3]{\phantomsection\noindent{\LARGE\bfseries\color{stacred}#2\label{#3}}\par\vspace{#1}}


